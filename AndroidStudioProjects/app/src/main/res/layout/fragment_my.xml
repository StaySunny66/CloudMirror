<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15sp"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="我 的"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/act_card"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="170dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/yuanjiao_small"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_login"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/linux" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/userid"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:text="gxyos"
                        android:textColor="@color/my_blue"
                        android:visibility="gone"
                         />

                    <TextView
                        android:id="@+id/name"
                        android:layout_marginLeft="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="高旭阳 15831367912"
                        android:textColor="@color/my_blue"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/lgin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="你好，请登录"
                        android:textColor="@color/my_blue"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/grxx"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuanjiao_small"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/gr"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="个人信息"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/right" />
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_height="3dp"
            android:layout_width="1px"
            android:background="#90000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:id="@+id/qhzh"
            android:background="@drawable/yuanjiao_small"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/qh"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="切换账号"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/right" />

            </RelativeLayout>





        </LinearLayout>
        <View
            android:layout_height="3dp"
            android:layout_width="1px"
            android:background="#90000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuanjiao_small"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:id="@+id/yszc"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/yszc"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="隐私政策"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/right" />

            </RelativeLayout>





        </LinearLayout>
        <View
            android:layout_height="3dp"
            android:layout_width="1px"
            android:background="#90000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:id="@+id/about"
            android:background="@drawable/yuanjiao_small"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ywm"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="关于"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/right" />

            </RelativeLayout>





        </LinearLayout>

    </LinearLayout>
</LinearLayout>