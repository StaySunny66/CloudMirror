<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">


    <com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout
        android:id="@+id/pullup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:text="安 全"
                        android:textColor="@color/white"
                        android:textSize="40sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_marginLeft="120dp"
                            android:layout_width="match_parent"
                            android:entries="@array/hy"
                            android:id="@+id/ss"
                            android:layout_height="45dp"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="156sp"
                    android:layout_marginTop="19sp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent"
                        android:background="@drawable/yuanjiao_set"
                        android:gravity="right"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/s1"
                            android:layout_gravity="center_horizontal"
                            android:visibility="visible"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1.9"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:layout_margin="4dp"
                                    android:text="安全评分"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:text="90"
                                    android:gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:textSize="50dp"
                                    android:id="@+id/allbug"
                                    android:textColor="@color/white"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:text="90"
                                    android:gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:textSize="50dp"
                                    android:id="@+id/core"
                                    android:textColor="@color/white"
                                    android:layout_height="match_parent"/>




                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:text="年度行业漏洞"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:text="我的安全得分"
                                    android:gravity="center"
                                    android:textSize="15dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:layout_height="match_parent"/>



                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:id="@+id/s1s"
                            android:layout_height="match_parent">
                            <ProgressBar
                                android:layout_width="50dp"
                                android:id="@+id/s1p"
                                android:layout_height="50dp"/>
                            <Button
                                android:layout_width="120dp"
                                android:text="去登陆"
                                android:id="@+id/login"
                                android:visibility="gone"
                                android:layout_height="60dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160sp"
                    android:layout_marginTop="22sp"
                    android:background="@drawable/yuanjiao_small"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"                        android:layout_marginBottom="5sp"
                        android:gravity="center"
                        android:text="近年行业安全趋势"
                        android:textColor="@color/my_blue"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <com.github.mikephil.charting.charts.BarChart
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:id="@+id/loudong"
                            android:layout_height="match_parent"/>
                        <ProgressBar
                            android:layout_width="50dp"
                            android:id="@+id/loudongp"
                            android:layout_height="50dp"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/yuanjiao_small"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="5sp"
                        android:gravity="center_vertical"
                        android:text="行业相关漏洞披露"
                        android:textColor="@color/my_blue"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ListView
                            android:layout_width="match_parent"
                            android:id="@+id/cveList"
                            android:visibility="gone"
                            android:layout_height="match_parent"/>

                        <ProgressBar
                            android:layout_width="50dp"
                            android:id="@+id/list_cvep"
                            android:visibility="visible"
                            android:layout_height="50dp"/>

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>




    </com.qmuiteam.qmui.widget.pullRefreshLayout.QMUIPullRefreshLayout>



</RelativeLayout>